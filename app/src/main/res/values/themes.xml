<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- splash screen theme -->
    <style name="Theme.Splash.SunderlandCodingAssessment" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:background">@drawable/splash_logo</item>
    </style>

    <!-- main content theme -->
    <style name="Theme.SunderlandCodingAssessment" parent="Theme.MaterialComponents.NoActionBar">

        <!-- used to clear out the background from the splash screen -->
        <item name="android:background">@android:color/transparent</item>

        <!-- primary brand color -->
        <item name="colorPrimary">@color/nike_black</item>
        <item name="colorPrimaryVariant">@color/nike_white</item>
        <item name="colorOnPrimary">@color/nike_white</item>
        <item name="android:colorButtonNormal">#2196f3</item>

        <!-- secondary brand color -->
        <item name="colorSecondary">@color/nike_orange</item>
        <item name="colorSecondaryVariant">@color/nike_red</item>
        <item name="colorOnSecondary">@color/nike_black</item>

        <!-- status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- overflow menu -->
        <item name="colorControlHighlight">@color/nike_teal</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
    </style>
</resources>