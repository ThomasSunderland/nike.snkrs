<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- bottom navigation view - active item -->
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/bottom_navigation_active_text_size</item>
    </style>

    <!-- bottom navigation view - inactive item -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/bottom_navigation_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- toolbar overflow menu -->
    <style name="OverflowMenu" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:popupBackground">@color/nike_red</item>
    </style>
    <style name="ActionButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
    <style name="PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/nike_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- custom card shapes -->
    <style name="CardViewStyleTopRounded" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayCardViewTopRoundedCorners</item>
    </style>
    <style name="CardViewStyleBottomRounded" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayCardViewBottomRoundedCorners</item>
    </style>
    <style name="ShapeAppearanceOverlayCardViewTopRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeTopLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="ShapeAppearanceOverlayCardViewBottomRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/card_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/card_corner_radius</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
    </style>

    <!-- used to create circular material buttons   -->
    <style name="ShapeAppearanceOverlay.CircularButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>